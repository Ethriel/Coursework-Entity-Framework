        xmlns:local="clr-namespace:WPF_View.Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="login">
                
            </TextBox>
