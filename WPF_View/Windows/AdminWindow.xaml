<Window x:Class="WPF_View.Windows.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_View.Windows"
        mc:Ignorable="d"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="AdminWindow" Height="700" Width="820"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="5">
            <StackPanel Orientation="Horizontal" Margin="5">
                <Button Content="Attractions" Click="Button_Click"/>
                <Button Content="Cities" Click="Button_Click"/>
                <Button Content="Countries" Click="Button_Click"/>
                <Button Content="Hotels" Click="Button_Click"/>
                <Button Content="Pictures" Click="Button_Click"/>
                <Button Content="Tours" Click="Button_Click"/>
            </StackPanel>
            <TextBlock MinWidth="100" x:Name="TbPage" Visibility="Collapsed"/>
            <Frame x:Name="PagesFrame" Margin="5" Padding="0"
                   NavigationUIVisibility="Hidden"/>
        </StackPanel>
    </Grid>
</Window>
